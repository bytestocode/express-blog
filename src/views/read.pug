doctype html
html(lang="ko")
    head
        title 미니멀 블로그
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        main
            a(href="/") 홈으로
            span &nbsp;&nbsp;|&nbsp;&nbsp;
            a(href=`/posts/edit/${post._id}`) 수정
            span &nbsp;&nbsp;|&nbsp;&nbsp;
            a(href=`/posts/delete/${post._id}`) 삭제
            h3=post.title
            h4 by #{post.author}
            h5=post.date.toLocaleString()
            div=post.contents
            hr
            div
                if comment
                    form(method="POST" action=`/posts/${post._id}/${comment.commentId}/edit`)
                        input(placeholder="작성자" type="string" name="author" value=comment.author required=true)
                        input(placeholder="댓글 내용" type="string" name="contents" value=comment.contents required=true)
                        input(type="submit" value="확인")
                        a(href=`/posts/${post._id}`) 취소
                else
                    form(method="POST" action=`/posts/${post._id}/newcomments`)
                        input(placeholder="작성자" type="string" name="author" required=true)
                        input(placeholder="댓글 내용" type="string" name="contents" required=true)
                        input(type="submit" value="댓글 작성")
                each comment in post.comments
                    div
                        span #{comment.author}님의 댓글
                        span #{comment.contents}
                    a(href=`/posts/${post._id}/${comment.commentId}/edit`) 수정
                    span &nbsp;&nbsp;|&nbsp;&nbsp;
                    a(href=`/posts/${post._id}/${comment.commentId}/delete`) 삭제
                else
                    div
